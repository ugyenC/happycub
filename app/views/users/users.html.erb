<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card striped-tabled-with-hover">
          <div class="card-header ">
            <% flash.each do |key, value| %>
              <%= content_tag :div, value, class: "flash #{key}" %>
            <% end %>
            <h4 class="card-title">Users</h4>
          </div>
          <div class="card-body table-full-width table-responsive">
            <table class="table table-hover table-striped">
              <thead>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Birth Day</th>
              <th>Gender</th>
              <th>Email</th>
              <th>Action</th>

              </thead>
              <tbody>
              <% @user.each do |u| %>
                <tr>

                  <td class="count"></td>
                  <td><%=u.fname %></td>
                  <td><%=u.lname %></td>
                  <td><%=u.date_of_birth %></td>
                  <td>
                    <% if u.is_female? %>
                      Female
                    <%else %>
                      Male
                    <%end %>
                  </td>
                  <td><%=u.email %></td>
                  <td>
                    <%= link_to 'Edit',edit_user_path(id: u.id),class: "btn" %>
                    <%= link_to 'Delete', u, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
                  </td>

                </tr>
              <%end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

