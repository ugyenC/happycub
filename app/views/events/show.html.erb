<div class="content">
<div class="container-fluid">
  <div class="event-heading">
    <h4>
      <%= @event.title %>
    </h4>
  </div>

  <div class="event-content">
    <ul>
      <li>
        <i class="fa fa-map-marker"></i>
        <%= @event.location %>
      </li>
      <li>
        <i class="fa fa-calendar-o"></i>
        <%= @event.readable_date %>
      </li>
    </ul>
  </div>



  <% if @event.start_date> Date.today %>
    <% if current_user && current_user.admin %>
      <%= link_to 'Edit', edit_event_path(@event) %>|
    <% else %>
      <%if @event.attended_by(current_user.id, @event) %>
        <div class="row">
          <div class="col-md-6">
            <h4><i class="fa fa-list"></i>Users Attending</h4>
            <ul class="list-group">
              <% @event.users.each do |u| %>
                <li class="list-group-item">
                  <p><%=  u.full_name %> </p>
                </li>
              <%end %>
            </ul>
          </div>
          <div class="col-md-6">
            <h4>Guest Attendees</h4>
            <ul class="list-group">
              <% @event.registers.each do |r| %>
                <% r.guests.each do |g| %>
                  <li class="list-group-item">
                    <p><%= g.full_name %> </p>
                  </li>
                <%end %>
              <% end %>
            </ul>
          </div>
          <%= link_to "Cancel" ,register_path(event_id: @event.id),class:"btn btn-danger", method: :delete%>
      <% else %>
        <%= link_to "Register",  new_register_path(user_id: current_user.id, event_id: @event.id, allow_guest: @event.allow_guests)	%>
      <%end %>
    <% end %>
  <% end %>


    <%=link_to 'Back', events_path, class: "btn" %>
  </div>
</div>
</div>
