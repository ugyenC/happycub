<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card striped-tabled-with-hover">
          <div class="card-header ">
            <h4 class="card-title">Events</h4>
            <p class="card-category">Here is a subtitle for this table</p>
          </div>
          <div class="card-body table-full-width table-responsive">
            <table class="table table-hover table-striped">
              <thead>
              <th>ID</th>
              <th>Events Name</th>
              <th>Location</th>
              <th>Capacity</th>
              <th>Start Date</th>
              <th>Actions</th>
              </thead>
              <tbody>
              <% @events.each do |e| %>
              <tr>

                <td class="count"></td>
              <td><%=e.title %></td>
              <td><%=e.location %></td>
              <td><%=e.capacity %></td>
              <td><%=e.start_date %></td>
                <td>
                  <%= link_to 'Edit', edit_event_path(e), class: "btn" %>
                  <%= link_to 'Delete', e, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
                </td>


              </tr>
               <%end %>
              </tbody>
            </table>
            <%=link_to "Create New",new_event_path, class: "btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

