<div class="jumbotron">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<hr class="my-4">
<p>
  <%= image_tag(@post.image) %>
</p>
<hr class="my-4">
<p>
 
  <%= @post.body %>
</p>

<p>
  <strong>By:</strong>
  <i><%= @post.user.fname %></i>
</p>
<%  if current_user && current_user.admin %>
<%= link_to 'Edit', edit_post_path(@post) %> |

<% end %>
<%= link_to 'Back', root_path %>
</div>
